.IP "\fBshibata\fR" 4
.IX Item "shibata"
select shibata noise shaping dither
.IP "\fBlow_shibata\fR" 4
.IX Item "low_shibata"
select low shibata noise shaping dither
.IP "\fBhigh_shibata\fR" 4
.IX Item "high_shibata"
select high shibata noise shaping dither
.IP "\fBf_weighted\fR" 4
